CREATE TABLE USERS_DB(
 ID INT PRIMARY KEY AUTO_INCREMENT,
 LOGIN VARCHAR(255) NOT NULL UNIQUE,
 PASSWORD VARCHAR(255)  NOT NULL,
 EMAIL VARCHAR(255),
 FIRSTNAME VARCHAR(255),
 LASTNAME VARCHAR(255),
 BIRTHDAY DATE,
 ROLE_ID INTEGER,
   CONSTRAINT BOOK_PRIMARY_KEY PRIMARY KEY (ID),
   CONSTRAINT ROLE_FOREIGN_KEY FOREIGN KEY (ROLE_ID) REFERENCES ROLES_DB (ID)
);

INSERT INTO USERS_DB VALUES(1, 'login1', 'pass1', 'email1', 'fname1', 'lname1', '2000-11-01', 1);
INSERT INTO USERS_DB VALUES(2, 'login2', 'pass2', 'email2', 'fname2', 'lname2', '2000-11-01', 2);

SELECT * FROM USERS_DB;


CREATE TABLE ROLES_DB
(
 ID INT PRIMARY KEY AUTO_INCREMENT,
 NAME VARCHAR(255)
 );
INSERT INTO ROLES_DB VALUES(1, 'Admin');
INSERT INTO ROLES_DB VALUES(2, 'user');

SELECT * FROM ROLES_DB;